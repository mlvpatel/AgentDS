# =============================================================================
# AgentDS Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Author: Malav Patel
# =============================================================================

# =============================================================================
# LLM PROVIDERS (At least one required)
# =============================================================================

# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Google AI Studio
GEMINI_API_KEY=...

# Google Vertex AI
VERTEXAI_PROJECT=your-project-id
VERTEXAI_LOCATION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Azure OpenAI
AZURE_API_KEY=...
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2024-02-01

# AWS Bedrock
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION_NAME=us-east-1

# Groq (Fast inference)
GROQ_API_KEY=...

# Mistral AI
MISTRAL_API_KEY=...

# Together AI
TOGETHERAI_API_KEY=...

# Fireworks AI
FIREWORKS_AI_API_KEY=...

# Perplexity
PERPLEXITYAI_API_KEY=...

# DeepSeek
DEEPSEEK_API_KEY=...

# xAI (Grok)
XAI_API_KEY=...

# Cohere
COHERE_API_KEY=...

# Ollama (Local - no key needed, just base URL)
OLLAMA_API_BASE=http://localhost:11434

# =============================================================================
# INFRASTRUCTURE
# =============================================================================

# Redis (for caching and job queue)
REDIS_URL=redis://localhost:6379/0

# MLflow (for experiment tracking)
MLFLOW_TRACKING_URI=http://localhost:5000

# =============================================================================
# CLOUD STORAGE (Optional)
# =============================================================================

# AWS S3
# AWS_ACCESS_KEY_ID=... (same as above)
# AWS_SECRET_ACCESS_KEY=... (same as above)
S3_BUCKET_NAME=agentds-outputs

# Google Cloud Storage
GCS_BUCKET_NAME=agentds-outputs

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=...
AZURE_CONTAINER_NAME=agentds-outputs

# =============================================================================
# DATABASE CONNECTIONS (Optional)
# =============================================================================

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=agentds
POSTGRES_USER=postgres
POSTGRES_PASSWORD=...

# MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=agentds
MYSQL_USER=root
MYSQL_PASSWORD=...

# MongoDB
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=agentds

# Snowflake
SNOWFLAKE_ACCOUNT=...
SNOWFLAKE_USER=...
SNOWFLAKE_PASSWORD=...
SNOWFLAKE_WAREHOUSE=...
SNOWFLAKE_DATABASE=...
SNOWFLAKE_SCHEMA=...

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Server settings
HOST=0.0.0.0
PORT=7860
DEBUG=false

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
API_KEY_HEADER=X-API-Key
API_KEYS=key1,key2,key3

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# AGENT SETTINGS
# =============================================================================

# Default temperature (0.0 for deterministic)
DEFAULT_TEMPERATURE=0.0

# Maximum retries for LLM calls
MAX_RETRIES=3

# Request timeout (seconds)
REQUEST_TIMEOUT=120

# Human-in-the-loop (enable/disable)
HUMAN_IN_LOOP=true

# Auto-approve low-risk actions
AUTO_APPROVE_LOW_RISK=false
